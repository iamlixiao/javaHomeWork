import java.awt.Image;
import java.awt.image.BufferedImage;
import java.io.DataInputStream;
import java.io.IOException;
import java.io.ObjectOutputStream;
import java.net.Socket;

import javax.imageio.ImageIO;
import javax.imageio.stream.ImageOutputStream;

/**
 * 
 */

/**
 * @author lixiao
 * 
 */
public class CollectionServerThread extends Thread {
	Socket socket;
	ObjectOutputStream out;
	DataInputStream in;
	StringBuffer read;
	Collection current;
	boolean isUndead;

	CollectionServerThread(Socket s, Collection c) {
		socket = s;
		current = c;
		isUndead=true;
		read=new StringBuffer();
		System.out.println("Started");
		try {
			out = new ObjectOutputStream(s.getOutputStream());
			in = new DataInputStream(s.getInputStream());
		} catch (IOException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
	}

	public void run() {
		System.out.println("running");
		while (isUndead) {
			try {
				char c = in.readChar();
				if (c == '/') {
					System.out.println(read);
					if (read.toString().equals("..")) {
						current = current.getParentu();
						out.writeObject(new RemoteCollection(current));
					} else if (read.toString().equals(".")){
						out.writeObject(new RemoteCollection(current));
					}else {
						current = current.getSubu(read.toString());
						out.writeObject(new RemoteCollection(current));
					}
					return;
				} else if (c == '\0'&&read.length()>0) {
					Image img=current.getImg(read.toString());
					ImageIO.write((BufferedImage)img, "BMP", socket.getOutputStream());
					return;
				} else
					read.append(c);
			} catch (IOException e) {
				// TODO Auto-generated catch block
				e.printStackTrace();
				return;
			}
		}
	}
}
