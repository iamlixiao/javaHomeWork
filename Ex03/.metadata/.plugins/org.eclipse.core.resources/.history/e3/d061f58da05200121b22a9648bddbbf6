import java.awt.BorderLayout;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;
import java.io.DataInputStream;
import java.io.DataOutputStream;
import java.io.IOException;
import java.net.Socket;
import java.net.UnknownHostException;

import javax.swing.JButton;
import javax.swing.JFrame;
import javax.swing.JPanel;
import javax.swing.JScrollPane;
import javax.swing.JTextArea;
import javax.swing.JTextField;


public class Client extends JFrame implements ActionListener, Runnable {
	JTextArea chatBoard=new JTextArea();
	JPanel chatInput=new JPanel();
	JButton chat=new JButton("·¢ËÍ");
	JTextField chatContent=new JTextField(10);
	Socket socket;
	DataInputStream in;
	DataOutputStream out;
	Thread thread;

	Client(){
		this.setBounds(400, 100, 460, 400);
		this.setTitle("Client");
		this.setLayout(new BorderLayout());
		this.add(new JScrollPane(chatBoard),BorderLayout.CENTER);
		chatInput.add(chatContent);
		chatInput.add(chat);
		chat.addActionListener(this);
		this.add(chatInput,BorderLayout.SOUTH);
		this.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		this.setVisible(true);
		
		try {
			socket=new Socket("127.0.0.1",4331);
			in=new DataInputStream(socket.getInputStream());
			out=new DataOutputStream(socket.getOutputStream());
			thread=new Thread(this);
			thread.start();
			
		} catch (UnknownHostException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		} catch (IOException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
	}
	@Override
	public void run() {
		String s;
		while (true){
			try {
				s=in.readUTF();
				chatBoard.append(s+"\n");
			} catch (IOException e) {
				// TODO Auto-generated catch block
				e.printStackTrace();
			}
			
		}
	}

	@Override
	public void actionPerformed(ActionEvent e) {
		if (e.getSource()==chat){
			try {
				out.writeUTF(chatContent.getText());
			} catch (IOException ex) {
				// TODO Auto-generated catch block
				ex.printStackTrace();
			}
		}
	}

	/**
	 * @param args
	 */
	public static void main(String[] args) {
		new Client();

	}

}
